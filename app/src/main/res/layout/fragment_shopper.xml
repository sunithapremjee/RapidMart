<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopperFragment"
    android:id="@+id/idshopperFragment">

    <TextView
        android:id="@+id/txtShops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/Shops"
        android:textSize="15sp"
        android:paddingStart="10dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewShops"
        android:scrollbars="horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/txtShops" />
    <TextView
        android:id="@+id/txt_assistants"
        android:text="@string/assistants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/recyclerviewShops"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewAssistants"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_assistants"/>


</RelativeLayout>